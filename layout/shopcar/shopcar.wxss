/* layout/shopcar/shopcar.wxss */
.shopcar-box {
    min-height: 500rpx;
    padding: 0 20rpx;
}
.shopcar-box .good-box {
    border-bottom: 2rpx solid #f7f7f7;
}
.good-box .shop-name {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #f7f7f7;
}
.detail {
    display: flex;
    padding-top: 20rpx;
}
.detail-img {
    width: 30%;
    margin-right: 20rpx;
}
.detail-img image {
    width: 100%;
    height: 80%;
    border-radius: 10rpx;
    box-shadow: 0 0 2rpx #ccc;
}
.good-detail {
    width: 70%;
    height: 300rpx;
}
.detail-box .detail-text {
    font-size: 24rpx;
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.detail-box .detail-standrad {
    display: inline-block;
    padding: 0 10rpx;
    border-radius: 10rpx;
    font-size: 24rpx;
    background-color: #f4f4f4;
    color: #9f9f9f;
    margin: 20rpx 0;
}
.good-box .good-stepNum {
    display: flex;
    margin-top: 20rpx;
    justify-content: space-between;
}