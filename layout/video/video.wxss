/* layout/video/video.wxss */
.video-box {

}
.video-box .video-list {
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    margin: 20rpx 0;
}
.video-list .video-content {
    width: 48%;
}
.video-content video {
    width: 100%;
    height: 260rpx;
    border-radius: 10rpx;
}
.video-content .video-state{
    padding: 0 10rpx;
}
.video-state .video-title{
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #000;
    font-weight: 550;
}
.video-state .video-songer {
    font-size: 22rpx;
    margin: 10rpx 0;
}
.video-state .video-other {
    font-size: 22rpx;
}
.video-other .playTime {
    margin: 0 10rpx;
}