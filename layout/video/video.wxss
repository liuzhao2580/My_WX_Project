/* layout/video/video.wxss */
.video-box {

}
.video-box .video-list {
    display: flex;
    justify-content: space-between;
}
.video-list .video-content {
    width: 49%;
}
.video-content video {
    width: 100%;
    height: 260rpx;
}
.video-state .video-title{
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #000;
    font-weight: 550;
}
.video-state .video-songer {
    font-size: 22rpx;
    margin: 10rpx 0;
}
.video-state .video-other {
    font-size: 22rpx;
}