/* layout/classify/classify.wxss */
page {
    width: 100%;
    height: 100%;
}
.classify-box {
    position: relative;
    width: 100%;
    height: 100%;
}
/* 左边的分类 */
.classify-left {
    position: absolute;
    left: 0;
    width: 220rpx;
    height: 100%;
    background-color: #f6f6f6;
}
.classify-left .left-scroll {
    height: 100%;
}
.classify-left .classify-detail {
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
}
.classify-detail.classify-active {
    background-color: #fff;
    position: relative;
}
.classify-detail.classify-active ::after {
    position: absolute;
    content: "";
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 10rpx;
    height: 40rpx;
    background-color: #c20c0c;
}
.classify-detail.classify-active text {
    color: #2f2e2e;
    font-size: 34rpx;
    font-weight: 550;
}
.classify-detail text {
    color: #959595;
    font-size: 26rpx;
}
/* 右边的内容 */
.classify-right {
    margin-left: 220rpx;
    height: 100%;
    background-color: #ccc;
    padding: 0 20rpx;
}