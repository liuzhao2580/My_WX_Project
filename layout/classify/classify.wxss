/* layout/classify/classify.wxss */
page {
    width: 100%;
    height: 100%;
}
.classify-box {
    position: relative;
    width: 100%;
    height: 100%;
}
/* 左边的分类 */
.classify-left {
    position: absolute;
    left: 0;
    width: 220rpx;
    height: 100%;
    background-color: #f6f6f6;
}
.classify-left .left-scroll {
    height: 100%;
}
.classify-left .classify-detail {
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.classify-detail.classify-active {
    background-color: #fff;
    position: relative;
}
.classify-detail.classify-active ::after {
    position: absolute;
    content: "";
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 10rpx;
    height: 40rpx;
    background-color: #c20c0c;
}
.classify-detail.classify-active text {
    color: #2f2e2e;
    font-size: 34rpx;
    font-weight: 550;
}
.classify-detail text {
    color: #959595;
    font-size: 26rpx;
}
/* 右边的内容 */
.classify-right {
    margin-left: 220rpx;
    height: 100%;
    padding-top: 20rpx;
    background-color: #fff;
}
.classify-right .classify-show {
    height: 100%;
    width: 100%;
    padding-left: 10rpx;
}
.classify-right .swiper-box {
    height: 350rpx;
    width: 100%;
}
.swiper-box swiper {
    padding-right: 10rpx;
}
.classify-show .classify-detail {
    margin-top: 20rpx;
}
.classify-detail .detail-title {
    font-size: 26rpx;
    font-weight: 550;
    color: #131212;
    margin-bottom: 10rpx;
    margin-top: 20rpx;
}
.classify-detail .detail-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.detail-list .list-box {
    width: 33.33%;
    text-align: center;
    padding-right: 10rpx;
    margin-top: 10rpx; 
}
.detail-list:after {
    content: "";
    width: 33%;
}
.list-box .list-image {
    width: 100%;
    height: 100rpx;
    border-radius: 10rpx;
}
.list-box .list-text {
    color: #131212;
    font-size: 22rpx;
}