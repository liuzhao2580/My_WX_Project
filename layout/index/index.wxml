<!--layout/index/index.wxml-->
<view class="index-box">
    <!-- 轮播图 -->
    <view class="swiper-box">
        <swiper indicator-dots="true" autoplay="true" indicator-color="#fff"  indicator-active-color="#c20c0c">
            <block wx:for="{{swiperData}}"  wx:key="item.title">
                <swiper-item >
                    <image src="{{item.img}}" class="slide-image" />
                </swiper-item>
            </block>
        </swiper>
    </view>
</view>
